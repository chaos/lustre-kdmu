+#define ADIOI_BUFFERED_WRITE \
+{ \
+    if (req_off >= writebuf_off + writebuf_len) { \
+        if (writebuf_len) { \
+           ADIO_WriteContig(fd, writebuf, writebuf_len, MPI_BYTE, \
